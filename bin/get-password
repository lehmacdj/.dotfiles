#!/usr/bin/env bash

[ $# -eq 1 ] || { echo "usage: get-password <1password item name>" && exit 1; }
item="$1"

# get session token; up to 3 attempts at password failure
eval "$(
  attempt=0
  while [ "$attempt" -lt 3 ] && ! op signin my; do
    attempt=$((attempt + 1))
  done
)"

op get item "$item" --fields password | tr -d '\n'
